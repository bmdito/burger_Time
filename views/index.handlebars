<h1>Burger Time!</h1>

<h2> Burger Hit List!</h2>

<ul>
    {{#each burgers}}
        {{#unless this.devoured }}
        <li>    
            {{this.burger_name}}

            <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="true">
                <button type="submit">Devour!</button>
            </form>
        
        </li>
        {{/unless}}
    {{/each}}            
</ul>


<h2> Burgers You have devoured!</h2>

<ul>
    {{#each burgers}}
        {{#if devoured }}
            <li>    
            {{this.burger_name}}

            <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="true">
                <button type="submit">Devour!</button>
            </form>
        
        </li>
        {{/if}}
    {{/each}}            
</ul>

<form class="burger-form">

  <div class="form-group">
    <label for="burg">Burger Name:</label>
    <input type="text" id="burg" name="name">
  </div>

  <button type="submit">Add Burger</button>

</form>

